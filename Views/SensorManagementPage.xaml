<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.SensorManagementPage"
             Title="Manage Sensors">

    <ContentPage.BindingContext>
        <vm:SensorManagementViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Sensor Management" FontSize="22" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Sensors}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding LocationDisplay}" />
                                <Label Text="Status: Active" IsVisible="{Binding IsFaulty, Converter={StaticResource InvertBoolConverter}}" />
                                <Label Text="Status: Inactive" IsVisible="{Binding IsFaulty}" />
                                <Button Text="Edit" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SensorManagementViewModel}}, Path=EditCommand}" CommandParameter="{Binding}" />
                                <Button Text="Deactivate" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SensorManagementViewModel}}, Path=DeactivateCommand}" CommandParameter="{Binding}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Add New Sensor" Command="{Binding AddCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
